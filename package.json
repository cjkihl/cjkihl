{
	"name": "@cjkihl/monorepo",
	"version": "0.0.1",
	"private": true,
	"workspaces": {
		"packages": [
			"packages/*"
		]
	},
	"scripts": {
		"build": "turbo build",
		"changeset": "changeset",
		"resolve-deps": "bun run ./packages/changeset-dep-resolver/resolve-deps.bin.ts",
		"version": "changeset version",
		"release": "bun run resolve-deps resolve && bun run build && changeset publish",
		"clean": "git clean -fxd -e .env.local",
		"type-check": "turbo type-check",
		"lint": "biome check . && manypkg check",
		"lint-fix": "biome check --write --unsafe . && manypkg fix",
		"test": "bun test",
		"up": "bun update -i -r",
		"knip": "knip --no-config-hints",
		"ci": "bun run build && bun run lint && bun run knip && bun run test"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.6",
		"@changesets/cli": "^2.29.7",
		"@manypkg/cli": "^0.25.1",
		"knip": "^5.65.0",
		"turbo": "^2.5.8",
		"typescript": "^5.9.3"
	},
	"packageManager": "bun@1.3.0"
}
