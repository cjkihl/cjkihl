{
	"name": "@cjkihl/monorepo",
	"version": "0.0.1",
	"private": true,
	"workspaces": ["packages/*"],
	"scripts": {
		"build": "turbo build",
		"publish": "turbo publish",
		"up": "bunx npm-check-updates -ws --root --format group -u",
		"bump": "bun ./packages/bump/index.bin.ts",
		"clean": "git clean -fxd -e .env.local",
		"lint": "biome check .",
		"lint-fix": "biome check --write --unsafe .",
		"test": "bun test"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"bun-types": "latest",
		"turbo": "^2.5.4",
		"typescript": "^5.8.3"
	},
	"packageManager": "bun@1.2.17"
}
