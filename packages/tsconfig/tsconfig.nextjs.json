{
	"compilerOptions": {
		// Next.js uses esnext instead of preserve
		"module": "esnext",
		"noEmit": true,
		"plugins": [
			{
				"name": "next"
			}
		],

		// Next.js uses ES2017 instead of ES2022
		"target": "ES2017"
	},
	"extends": ["./tsconfig.browser.json"],
	"include": [
		"${configDir}/next-env.d.ts",
		"${configDir}/**/*.ts",
		"${configDir}/**/*.tsx",
		"${configDir}/.next/types/**/*.ts"
	]
}
