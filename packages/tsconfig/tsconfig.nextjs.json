{
	"compilerOptions": {
		"allowArbitraryExtensions": true,
		"incremental": true,

		// Next.js uses esnext instead of preserve
		"module": "esnext",
		"noEmit": true,

		// Paths is optional
		/* "paths": {
			"@/*": ["./src/*"]
		}, */
		"plugins": [
			{
				"name": "next"
			}
		],

		// Next.js uses ES2017 instead of ES2022
		"target": "ES2017"
	},
	"extends": ["./tsconfig.browser.json"],
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
