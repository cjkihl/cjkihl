{
	"compilerOptions": {
		// We don't allow importing .json files etc since they need a bundler
		"allowArbitraryExtensions": false,
		// Optimizations for declaration files
		"composite": true,
		// Optimizations for declaration files
		"declaration": true,
		"declarationDir": "${configDir}/dist/types",
		"declarationMap": true,
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		// We emit files for library config
		"noEmit": false,
		// Rewrites .ts and .tsx to .js and .jsx
		"rewriteRelativeImportExtensions": true,
		"sourceMap": true,
		"types": ["node"]
	},
	"extends": ["./tsconfig.base.json"]
}
