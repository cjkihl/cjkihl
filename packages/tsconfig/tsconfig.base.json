{
	// https://www.totaltypescript.com/how-to-create-an-npm-package#32-set-up-a-tsconfigjson
	"compilerOptions": {
		// Allow importing .json files etc
		"allowArbitraryExtensions": true,
		// Base
		"allowJs": true,
		"checkJs": true,
		// Base
		"esModuleInterop": true,
		// Incremental output the buildgraph to file and speeds up builds even when there is no output
		"incremental": true,
		"isolatedModules": true,

		// Lib Node
		"lib": ["es2022"],

		// Module for bundler
		"module": "Preserve",
		"moduleDetection": "force",
		"moduleResolution": "bundler",
		// We don't emit any output for base config
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		// For Node without bundler
		// "module": "NodeNext",
		// "moduleResolution": "nodenext"

		// Outputs
		"outDir": "${configDir}/dist/output",
		"resolveJsonModule": true,
		"skipLibCheck": true,

		// Strictness
		"strict": true,
		"target": "es2022",
		"tsBuildInfoFile": "${configDir}/dist/tsbuildinfo.json",
		"verbatimModuleSyntax": true
	},
	"exclude": ["node_modules", "dist", "${configDir}/dist"],
	"include": ["${configDir}/**/*.ts", "${configDir}/**/*.tsx"]
}
